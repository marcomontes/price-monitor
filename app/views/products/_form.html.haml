= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :store
    = f.text_field :store
  .field
    = f.label :main_product
    = f.text_field :main_product
  .field
    = f.label :price_xpath
    = f.text_field :price_xpath
  .field
    = f.label :price_offer_xpath
    = f.text_field :price_offer_xpath
  .field
    = f.label :price_offer_2_xpath
    = f.text_field :price_offer_2_xpath
  .actions
    = f.submit 'Save'
