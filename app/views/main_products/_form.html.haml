= form_for @main_product do |f|
  - if @main_product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@main_product.errors.count, "error")} prohibited this main_product from being saved:"
      %ul
        - @main_product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
